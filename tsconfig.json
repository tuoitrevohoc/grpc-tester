{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "outDir": "out",
    "lib": [
      "ES2020"
    ],
    "sourceMap": true,
    "rootDir": "src",
    "strict": true   /* enable all strict type-checking options */,
    "noImplicitAny": true,
    "esModuleInterop": true
    /* Additional Checks */
